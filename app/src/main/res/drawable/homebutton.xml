<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <gradient
                android:startColor="#78EFDB"
                android:endColor="#2D76FD"
                android:angle="270" />
            <size android:width="350dp" android:height="50dp"/>

            <corners android:radius="28dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#9C9998"
                android:endColor="#EFD1C1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#4aa5d4" />
            <corners
                android:radius="27dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>

